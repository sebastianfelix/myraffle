<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="org.gtugs.bh.client.ui.resource.ResourceBundle" field="bundle"/>

	<g:HTMLPanel styleName="{bundle.css.boxouter}" addStyleNames="{bundle.css.b3}">
		<g:HTMLPanel styleName="{bundle.css.bigbox}">
			<div class="{bundle.css.arrow}"/>
			<h2>Enter the list of names:</h2>
			<g:TextArea ui:field="names"></g:TextArea>
			<h2>Enter the list of goods:</h2>
			<g:TextArea ui:field="goods"></g:TextArea>
			<g:Label ui:field="error" styleName="error"></g:Label>
			<g:Button ui:field="go">Continue</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 